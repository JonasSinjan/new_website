number = {1},
pages = {217--240},
title = {{Line-of-Sight Observables Algorithms for the Helioseismic and Magnetic Imager (HMI) Instrument Tested with Interferometric Bidimensional Spectrometer (IBIS) Observations}},
volume = {278},
year = {2012}
}
@article{norton_spectral_2006,
