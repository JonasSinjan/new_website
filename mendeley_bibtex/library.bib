doi = {10.1051/0004-6361:20011459},
file = {:home/jonas/Downloads/zotero{\_}lib/files/14/Schlichenmaier and Collados - 2002 - Spectropolarimetry in a sunspot penumbra - Spatial.pdf:pdf},
issn = {00046361},
